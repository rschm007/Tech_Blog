<div class="align-self-center">
  <div class="card d-inline-flex">
    <h2 class="card-header">Login</h2>
    <div class="card-body">
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email address</label>
          <input class="form-control" placeholder="Enter email" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password</label>
          <input class="form-control" placeholder="Password" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
    </div>
  </div>

  <div class="card d-inline-flex m-5">
    <h2 class="card-header">Signup</h2>
    <div class="card-body">
      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">Name</label>
          <input class="form-control" placeholder="Enter your full name" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email address</label>
          <input class="form-control" placeholder="Enter email" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input class="form-control" placeholder="Enter password" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>